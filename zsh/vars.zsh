#Environment variables

export CONFIG='~/.zshrc'
export EDITOR='nvim'
export EDITOR_CONFIG='~/.config/nvim/init.vim'

# If using Solarized, zsh-autosuggestions colors don't show up.
export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=#839496,underline"

# Set a command history file and make it large.
export HISTFILE=~/.zsh_history
export HISTSIZE=1000000
export SAVEHIST=$HISTSIZE
