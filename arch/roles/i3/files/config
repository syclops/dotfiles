set $cyan	#2aa198
set $green	#859900

# solarized light
set $baseA3 #fdf6e3
set $baseA2 #eee8d5
set $baseA1 #93a1a1
set $baseA0 #839496
set $baseB0 #657b83
set $baseB1 #586e75
set $baseB2 #073642
set $baseB3 #002b36
set $custom #e1cab3

# $i3-background
exec_always --no-startup-id xsetroot -solid '$baseA2'

